<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/devimg"
    tools:context="chipset.revels.activities.LUGActivity">

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/realshit_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/realshit"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/realshit_image_view"
        android:text="@string/lug_manipal"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textSize="50sp"
        android:id="@+id/realshit_text_view"
        android:padding="16dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@id/realshit_text_view"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textSize="25sp"
        android:layout_centerInParent="true"
        android:text="@string/shake"
        android:padding="16dp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/lug_github_image_view"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/octo"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/lug_fb_image_view"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/fb"
            android:layout_height="60dp" />
    </LinearLayout>

</RelativeLayout>
