<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="TealTheme" parent="AppTheme">
        <item name="colorPrimary">@color/teal_primary</item>
        <item name="colorPrimaryDark">@color/teal_primary_dark</item>
        <item name="colorAccent">@color/teal_accent</item>
        <item name="android:navigationBarColor">@color/teal_primary_dark</item>
    </style>

    <style name="FullScreenTheme" parent="TealTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="ImageTheme" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:navigationBarColor">@color/teal_primary</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/teal_primary</item>
        <item name="colorPrimaryDark">@color/teal_primary_dark</item>
        <item name="colorAccent">@color/teal_accent</item>
        <item name="android:navigationBarColor">@color/teal_primary_dark</item>
    </style>

    <style name="LUGTheme" parent="FullScreenTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>
</resources>
